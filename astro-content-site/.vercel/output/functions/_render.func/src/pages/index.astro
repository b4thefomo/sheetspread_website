---
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';
import ContentCard from '../components/ContentCard.astro';

const blogPosts = await getCollection('blog');
---

<Layout title="Content Explorer - Home">
  <div class="mb-8">
    <h1 class="text-3xl font-bold mb-2">Content Explorer</h1>
    <p class="text-gray-600">Explore all content from the collection</p>
  </div>
  
  {blogPosts.length === 0 ? (
    <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4 mb-6">
      <p class="text-yellow-700">No content found. Add markdown files to the content/blog directory.</p>
    </div>
  ) : (
    <div class="content-grid">
      {blogPosts.map((post) => (
        <ContentCard post={post} />
      ))}
    </div>
  )}
</Layout>
